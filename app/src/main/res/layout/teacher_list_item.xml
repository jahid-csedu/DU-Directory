<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_card_selector"
    android:layout_margin="10dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="name"
        android:textColor="#000000"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/designation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/teacher_name"
        android:layout_marginTop="11dp"
        android:text="designation"
        android:textColor="#26a0da"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/button_call"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/designation"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/call" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_no"
        android:layout_below="@id/designation"
        android:text="phone"
        android:textColor="#26a0da"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_id"
        android:layout_below="@id/phone_no"
        android:text="phone"
        android:textColor="#26a0da"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_no2"
        android:layout_below="@id/designation"
        android:text="phone"
        android:textColor="#26a0da"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_id2"
        android:layout_below="@id/phone_no"
        android:text="phone"
        android:textColor="#26a0da"
        android:textSize="20sp"
        android:visibility="gone"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/dept_name"
        android:layout_below="@id/phone_no"
        android:text="department"
        android:textColor="#26a0da"
        android:textSize="20sp"
        android:visibility="gone"/>
</RelativeLayout>