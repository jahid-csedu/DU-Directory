<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/popup_search_view"
    android:padding="20dp"
    android:background="@drawable/background_card_selector">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_text_view"
        android:text="শিক্ষকের নাম এবং বিভাগের নাম লিখে সার্চ করুন"
        android:textColor="#ff0000"
        android:textSize="20sp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/search_teacher"
        android:layout_below="@id/search_text_view"
        android:gravity="center"
        android:hint="নাম লিখুন"/>

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/search_teacher"
        android:hint="বিভাগের নাম লিখুন"
        android:id="@+id/search_dept"/>

    <Button
        android:id="@+id/search_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_dept"
        android:text="সার্চ করুন"
        android:textColor="#26a0da"
        android:textSize="20sp"
        android:layout_alignParentRight="true" />

    <Button
        android:id="@+id/search_cancel"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/search_dept"
        android:text="বাদ দিন"
        android:textSize="20sp"
        android:textColor="#26a0da"/>

</RelativeLayout>