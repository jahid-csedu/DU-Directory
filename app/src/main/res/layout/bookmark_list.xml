<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@drawable/background_card_selector">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teacher_name_bookmark"
        android:layout_marginTop="10dp"
        android:text="name"
        android:textColor="#000000"
        android:textSize="25sp"/>

    <TextView
        android:id="@+id/designation_bookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/department"
        android:layout_marginTop="10dp"
        android:text="designation"
        android:textColor="#ff0000"
        android:textSize="20sp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/phone_no_bookmark"
        android:text="phone"
        android:textColor="#26a0da"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/designation_bookmark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email_bookmark"
        android:text="email"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/phone_no_bookmark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/call_button_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/phone_no_bookmark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/call"
        android:onClick="call" />

    <ImageView
    android:id="@+id/email_button_bookmark"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:layout_alignBottom="@+id/email_bookmark"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:background="@drawable/email"
    android:onClick="email"/>

    <ImageView
        android:id="@+id/delete_bookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/designation_bookmark"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/delete"
        android:onClick="email"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/department"
        android:text="department"
        android:textColor="#26a0da"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/teacher_name_bookmark"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
